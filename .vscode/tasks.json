{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TypingCoach",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-O2",
                "-Wall",
                "main.cpp",
                "trie.cpp",
                "-o",
                "TypingCoach.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Debug TypingCoach",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "-O0",
                "-Wall",
                "main.cpp",
                "trie.cpp",
                "-o",
                "TypingCoach_Debug.exe"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run TypingCoach",
            "type": "shell",
            "command": "${workspaceFolder}/TypingCoach.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build TypingCoach",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
    ]
}